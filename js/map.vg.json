{
	"$schema": "https://vega.github.io/schema/vega-lite/v5.json",
	"width": 800,
	"height": 500,
	"title": "Infant mortality rate for each Country at the end of 2019",
	"projection": { "type": "mercator" },
	"layer": [
		{
			"data": {
				"url": "https://raw.githubusercontent.com/divideofficial/FIT3179-assignment-2/master/data/world_map.topojson",
				"format": { "type": "topojson", "feature": "world_map_geo" }
			},
			"mark": { "type": "geoshape", "fill": "lightgray", "stroke": "white" }
		},
		{
			"data": {
				"url": "https://raw.githubusercontent.com/divideofficial/FIT3179-assignment-2/master/infant_mortality_coords.csv"
			},
			"mark": { "type": "circle", "tooltip": { "content": "data" } },

			"encoding": {
				"longitude": { "field": "Longitude", "type": "quantitative" },
				"latitude": { "field": "Latitude", "type": "quantitative" },

				"color": {
					"field": "2019 Mortality Rate",
					"type": "quantitative",
					"scale": { "scheme": "reds" }
				}
			}
		}
	]
}
