{
	"$schema": "https://vega.github.io/schema/vega-lite/v5.json",
	"title": "COVID-19 Active Cases (10 Oct 2020)",
	"width": 800,
	"height": 600,
	"projection": { "type": "equirectangular" },
	"data": {
		"url": "https://raw.githubusercontent.com/divideofficial/FIT3179-assignment-2/master/data/world_map.topojson",
		"format": { "type": "topojson", "feature": "world_map_geo" }
	},
	"transform": [
		{
			"lookup": "properties.NAME",
			"from": {
				"data": {
					"url": "https://raw.githubusercontent.com/divideofficial/FIT3179-assignment-2/master/infant_mortality.csv"
				},
				"key": "Country",
				"fields": ["Active"]
			}
		},
		{ "calculate": "datum.Active + 0.1", "as": "Active Cases" }
	],

	"mark": { "type": "geoshape" },
	"encoding": {
		"color": {
			"field": "2019 Mortality Rate",
			"type": "quantitative",
			"scale": { "type": "log" }
		}
	}
}
